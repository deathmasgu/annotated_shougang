<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/art_dialog_box_bg"
    android:orientation="vertical" >
	
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Message"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="19sp" />
    
    <TextView
        android:id="@+id/alert_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="#000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#2294D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ok_txt"
            style="@style/art_alert_dialog_btn_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ok_btn_default" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#2294D3" />

        <TextView
            android:id="@+id/cancel_txt"
            style="@style/art_alert_dialog_btn_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel_btn_default" />
    </LinearLayout>

</LinearLayout>