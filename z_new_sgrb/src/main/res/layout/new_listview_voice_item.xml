<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
     >
    
    <RelativeLayout 
        android:id="@+id/voice_item"
        android:layout_height="70dp"
        android:background="@drawable/voice_list_item"
        android:layout_width="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        >
        
        <ImageView
            android:id="@+id/voice_play"
            android:paddingTop="2dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:focusable="false"
	        android:layout_width="50dp" 
	        android:layout_height="50dp" 
	        android:layout_marginLeft="12dp"
	        android:layout_marginTop="10dp"
	        android:gravity="center"/>
        
        <!-- <ImageView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/voice_list_item_above2"
            android:layout_toRightOf="@+id/voice_play"
            /> -->
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/voice_play"
            android:orientation="horizontal"
            android:background="@drawable/voice_item_linearlayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            
            <TextView 
	            android:id="@+id/voice_title"
	            android:layout_height="20dp"
	            android:layout_width="0dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginTop="10dp"
	            android:layout_weight="1.0"
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:textColor="@android:color/black"
	            android:background="@drawable/voice_item_text"
	            android:textSize="12sp"/>
            
            <ImageView 
                android:layout_width="40dp"
            	android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/voice_item_icon"
                android:layout_marginRight="10dp"
                />
            
            
        </LinearLayout>
        
        
        
    </RelativeLayout>
        
</LinearLayout>
